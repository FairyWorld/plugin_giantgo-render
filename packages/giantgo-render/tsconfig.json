{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "../",
    "baseUrl": "../",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "allowJs": true,
    "types": ["unplugin-icons/types/vue", "unplugin-vue-macros/macros-global"],
    "paths": {
      "@giantgo-render/*": ["../*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "../components/**/*.ts",
    "../components/**/*.d.ts",
    "../components/**/*.vue",
    "../hooks/**/*.ts",
    "../tokens/**/*.ts",
    "../utils/**/*.ts"
  ]
}
