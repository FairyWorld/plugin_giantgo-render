{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "allowJs": true,
    "types": ["unplugin-icons/types/vue", "unplugin-vue-macros/macros-global"]
  },
  "vueCompilerOptions": {
    "plugins": ["@vue-macros/volar/define-options"]
  },
  "include": ["./packages/**/*.ts", "./packages/**/*.d.ts", "./packages/**/*.vue"]
}
